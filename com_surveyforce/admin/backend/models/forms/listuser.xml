        <field name="survey_id" type="survey" class="input-xlarge" label="COM_SURVEYFORCE_CATEGORY_CAPTION" labelclass="control-label"/>
        <field name="is_add_reg" type="radio" class="btn-group" label="COM_SURVEYFORCE_ADD_REGISTERED_USERS" labelclass="control-label" default="0">
            <option value="1">COM_SURVEYFORCE_YES</option>
            <option value="0">COM_SURVEYFORCE_NO</option>
        </field>
        <field name="is_import_csv" type="radio" class="btn-group" label="COM_SURVEYFORCE_IMPORT_FROM_CSV" labelclass="control-label" default="0">
            <option value="1">COM_SURVEYFORCE_YES</option>
            <option value="0">COM_SURVEYFORCE_NO</option>
        </field>
        <field name="csv_file" type="file" class="inputbox btn" label="COM_SURVEYFORCE_CATEGORY_CATEGORY"/>
        <field name="is_add_manually" type="radio" class="btn-group" label="COM_SURVEYFORCE_ADD_USERS_MANUALLY" labelclass="control-label" default="0">
            <option value="1">COM_SURVEYFORCE_YES</option>
            <option value="0">COM_SURVEYFORCE_NO</option>
        </field>
    </fieldset>
